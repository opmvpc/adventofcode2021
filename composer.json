{
    "name": "opmvpc/aoc2021",
    "type": "project",
    "require": {
        "php": "^8.1",
        "symfony/var-dumper": "^6.0",
        "php-ds/php-ds": "^1.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.3",
        "vimeo/psalm": "^4.13",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Opmvpc\\Aoc2021\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "opmvpc",
            "email": "thibsix@outlook.be"
        }
    ],
    "scripts": {
        "psalm": "psalm --show-info=true",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "format": "php-cs-fixer fix --allow-risky=yes"
    }
}
